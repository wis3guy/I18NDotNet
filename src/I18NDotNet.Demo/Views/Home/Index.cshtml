@model I18NDotNet.Demo.Models.FormModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width"/>
	<title>Index</title>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css">
</head>
<body>
<div class="container">
	<h1>Address demo</h1>
	<div class="row">
		<form class="col s12">
			<div class="row">
				<div class="col s6 address">
					<h3>Visit address</h3>
					@Html.EditorFor(x => x.VisitAddress)
				</div>
				<div class="col s6 address">
					<h3>Postal address</h3>
					@Html.EditorFor(x => x.PostalAddress)
				</div>
			</div>
			<div class="row">
				<div class="input-field col s12">
					<input type="submit" value="Validate" class="waves-effect waves-light btn" />
				</div>
			</div>
		</form>
	</div>
</div>
<script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>
<script type="text/javascript">
	$(document).ready(function () {
		$('select').material_select();

		$("select", "div[data-purpose='country']").on("change", function () {
			var language = $("input[data-purpose='language']", $(this).closest(".address")).val();
			var country = $("select", "div[data-purpose='country']").val();

			$.getJSON(
				"/address/candidates?countrycode=" + country + "&languagecode=" + language,
				function(data) {
					alert(JSON.stringify(data)); // TODO: Repopulate the form weth teh received values
				});
		});
	});
</script>
</body>
</html>