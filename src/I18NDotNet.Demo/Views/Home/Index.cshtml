@model I18NDotNet.Demo.Models.FormModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width"/>
	<title>Index</title>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css">
	<style type="text/css">
		.hidden_address_field {
			background-color: yellow;
		}
	</style>
</head>
<body>
<div class="container">
	<h1>Address demo</h1>
	<div class="row">
		<form class="col s12">
			<select>
				<option>1</option>
				<option>2</option>
			</select>
			<div class="row">
				<div class="col s6">
					<h3>Visit address</h3>
					@Html.EditorFor(x => x.VisitAddress)
				</div>
				<div class="col s6">
					<h3>Postal address</h3>
					@Html.EditorFor(x => x.PostalAddress)
				</div>
			</div>
			<div class="row">
				<div class="input-field col s12">
					<input type="submit" value="Validate" class="waves-effect waves-light btn"/>
				</div>
			</div>
		</form>
	</div>
</div>
<script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>
<script type="text/javascript">
	var InitializeMaterialize = function() {
		$("select").material_select();
		Materialize.updateTextFields();
	};

	$(document).ready(function () {
		InitializeMaterialize();

		$("form").on("change", "select", function () {
			var address = $(this).closest(".address");
			
			if (address.length > 0) {
				var prefix = address.attr("data-prefix");
				var data = $("input, textarea, select", address).serialize().split(prefix + ".").join("");
				var url = "/i18n/address?htmlfieldprefix=" + prefix + "&trigger=" + $(this).attr("name");

				$("select", address).each(function() {
					url += "&select=" + $(this).attr("name");
				});

				$.post(url, data, function (html) {
					address.replaceWith(html);
					InitializeMaterialize();
				});
			}
		});
	});
</script>
</body>
</html>